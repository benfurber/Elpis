{
  "ecmaFeatures": {
    "jsx": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "prettier",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["jest", "prettier", "react", "react-native"],
  "rules": {
    "import/prefer-default-export": false,
    "no-extraneous-dependencies": false,
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [0]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
